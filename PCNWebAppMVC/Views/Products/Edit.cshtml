@model PCNApi.Models.Product
@{
    ViewData["Title"] ="Update a Product";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p><h1>Update Actor</h1></p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
				
                    <div class="mb-3">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ListPrice" class="control-label"></label>
                        <input asp-for="ListPrice" class="form-control" />
                        <span asp-validation-for="ListPrice" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Brand.BrandName" class="control-label"></label>
                        <input asp-for="Brand.BrandName" class="form-control" readonly />
                        <span asp-validation-for="Brand.BrandName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Category.CategoryName" class="control-label"></label>
                        <input asp-for="Category.CategoryName" class="form-control" readonly />
                        <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ModelYear" class="control-label"></label>
                        <input asp-for="ModelYear" class="form-control" readonly />
                        <span asp-validation-for="ModelYear" class="text-danger"></span>
                    </div>
                   
                    <div class="mb-3">
                        <input type="submit" value="Update" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>